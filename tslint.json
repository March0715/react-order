{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "declarationDir": "./types/",
    "composite": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "module": "ESNext",
    "target": "es5",
    "removeComments": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "locale": "zh-cn",
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@ali/draw-*": [
        "./packages/draw-*/src/"
      ]
    }
  },
  "references": [
    {
      "path": "./packages/draw-common/"
    },
    {
      "path": "./packages/draw-model/"
    },
    {
      "path": "./packages/draw-collab/"
    },
    {
      "path": "./packages/draw-editor/"
    },
    {
      "path": "./packages/draw-server/"
    },
    {
      "path": "./packages/draw-app/"
    }
  ]
}